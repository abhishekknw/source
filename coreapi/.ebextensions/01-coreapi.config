

container_commands:
  01_migrate:
    command: "docker exec `docker ps -a --no-trunc -q | head -n 1` /opt/python/run/venv/bin/python /opt/python/current/app/coreapi/manage.py migrate --noinput  &>> /tmp/deploy.log"
    leader_only: true


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "coreapi.settings"
    PYTHONPATH: "/opt/python/current/app/coreapi:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "coreapi/coreapi/wsgi.py"


