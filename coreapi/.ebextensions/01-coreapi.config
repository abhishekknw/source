

container_commands:
  01_migrate:
    command: "source 	/opt/python/run/venv/bin/activate && python /opt/python/current/app/coreapi/manage.py migrate --noinput"
    leader_only: true
  02_redis:
    command: "redis-server"
  03_celery:
    command: "source 	/opt/python/run/venv/bin/activate && python /opt/python/current/app/coreapi/manage.py celeryd --verbosity=2"


option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "coreapi.settings"
    PYTHONPATH: "/opt/python/current/app/coreapi:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "coreapi/coreapi/wsgi.py"


